@page
@model Hackaton.App.Frontend.Pages.EditNovedadModel
@{
    var novedad = Model.Novedad;
}
<div class="text-center">
  <form method="POST">
    <label for="id" class="form-label">Id:</label>
<input type="text" class="form-control" id="id" name="id" placeholder="Id" asp-for="@novedad.id">
    <label for="fecha_de_novedad" class="form-label">Fecha de novedad:</label>
<input type="text" class="form-control" id="fecha_de_novedad" name="fecha_de_novedad" placeholder="Fecha de novedad" asp-for="@novedad.fecha_de_novedad">
    <label for="dias_novedad_activa" class="form-label">Dias novedad activa:</label>
<input type="number" class="form-control" id="dias_novedad_activa" name="dias_novedad_activa" placeholder="Dias novedad activa" asp-for="@novedad.dias_novedad_activa">
    <label for="texto_explicativo" class="form-label">Texto explicativo: </label>
<input type="text" class="form-control" id="texto_explicativo" name="texto_explicativo" placeholder="Texto explicativo" asp-for="@novedad.texto_explicativo">

    <hr>
    <button type="submit" class="btn btn-success">Enviar</button>
  </form>
</div>
